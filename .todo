DB_NAME => forum
   Entity => users:
      ✔ id INTEGER PRIMARY KEY NOT NULL AUTOINCREMENT
      ✔ pseudo VARCHAR(50)
      ✔ firstname VARCHAR(100)
      ✔ lastname VARCHAR(100)
      ✔ password TEXT
   Entity => questions:
      ✔ id INTEGER PRIMARY KEY NOT NULL AUTOINCREMENT
      ✔ title VARCHAR(150)
      ✔ description VARCHAR(255)
      ✔ content TEXT
      ✔ id_author INTEGER
      ✔ id_category INTEGER
      ✔ pseudo_author VARCHAR(50)
      ✔ date_publication Text
   Entity category:
      ✔ id INTEGER PRIMARY KEY NOT NULL AUTOINCREMENT
      ✔ name VARCHAR(255)

